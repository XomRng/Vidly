@using System.Activities.Statements
@using Vidly.Models
@model List<Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmy</h2>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Nazwa filmu</th>
        <th>Gatunek</th>
    </tr>
    </thead>
    <tbody>
        @foreach(Movie mov in Model)
        {
            <tr>
                <td>@Html.ActionLink(@mov.Name, "Details", "Movies", new { id = @mov.Id }, null)</td>
                <td>@mov.MovieGenre.Name</td>
            </tr>
            
            
        }
    </tbody>
    

</table>
   

    
