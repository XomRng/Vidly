@using System.Activities.Statements
@using Vidly.Models
@model List<Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmy</h2>

@*<button type ="button" class="btn btn-primary" onclick="@Url.Action("Edit", "Movies")">Nowy</button>*@
@*<input type="button" value="Back" onclick="location.href='@Url.Action("CustomersIndex", "Customers")'" />*@
<input type="button" value="Nowy film" onclick="location.href='@Url.Action("NewCustomer", "Movies")'" />

<table id="movies" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Nazwa filmu</th>
        <th>Gatunek</th>
        <th>Kasowanie</th>
    </tr>
    </thead>
    <tbody>

    </tbody>
    

</table>
@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data, type, movie) {
                            return "<a href='/movies/edit/" + movie.id + "'>" + movie.name;
                        }
                    },
                    {
                        data: "movieGenre.name"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#movies").on("click",
                ".js-delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Czy jesteś pewny, że chcesz skasować ten film?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/movies/" + button.attr("data-movie-id"),
                                    method: "DELETE",
                                    success: function() {
                                        table.row(button.parent("tr")).remove().draw();
                                    }
                                });
                            }
                        })
                });
        })
    </script>
}
   

    
