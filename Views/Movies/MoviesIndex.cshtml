@using System.Activities.Statements
@using Vidly.Models
@model List<Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmy</h2>

@*<button type ="button" class="btn btn-primary" onclick="@Url.Action("Edit", "Movies")">Nowy</button>*@
@*<input type="button" value="Back" onclick="location.href='@Url.Action("CustomersIndex", "Customers")'" />*@
<input type="button" value="Nowy film" onclick="location.href='@Url.Action("NewCustomer", "Movies")'" />

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Nazwa filmu</th>
        <th>Gatunek</th>
    </tr>
    </thead>
    <tbody>
        @foreach(Movie mov in Model)
        {
            <tr>
                <td>@Html.ActionLink(@mov.Name, "Edit", "Movies", new { id = @mov.Id }, null)</td>
                <td>@mov.MovieGenre.Name</td>
            </tr>
            
            
        }
    </tbody>
    

</table>
   

    
