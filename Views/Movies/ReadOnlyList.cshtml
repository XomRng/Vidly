@using System.Activities.Statements
@using Vidly.Models
@model List<Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmy</h2>

@*<button type ="button" class="btn btn-primary" onclick="@Url.Action("Edit", "Movies")">Nowy</button>*@
