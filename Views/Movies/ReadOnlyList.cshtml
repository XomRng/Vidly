<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Nazwa filmu</th>
            <th>Gatunek</th>
           
        </tr>
    </thead>
    <tbody></tbody>


</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "movieGenre.name"
                    }
                ]
            });

        })
    </script>
}



