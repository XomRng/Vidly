
@model Vidly.ViewModels.UserViewModel
@{
    ViewBag.Title = "UserForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (Model.MyUser.Id == 0)
    {
        <h2>Nowy użytkownik</h2>
    }
    else
    {
        
        <h2>Edytuj użytkownika</h2>
    }
}


@using (Html.BeginForm("SaveUser", "MyUsers"))
{
    <div class="form-group">
        @Html.LabelFor(u=>u.MyUser.Name)
        @Html.TextBoxFor(u=>u.MyUser.Name, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(u=>u.MyUser.Login)
        @Html.TextBoxFor(u=>u.MyUser.Login, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(u=>u.MyUser.Password)
        @Html.TextBoxFor(u=>u.MyUser.Password, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(u=>u.MyUser.UserTypeId)
        @Html.DropDownListFor(u=>u.MyUser.UserTypeId, new SelectList(Model.UserTypes, "Id", "Name"), "Wybierz typ,", new {@class = "form-control"})
    </div>

    @Html.HiddenFor(u=>u.MyUser.Id)
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
}